{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "noImplicitAny": false,
    "removeComments": false,
    "preserveConstEnums": true,
    "target": "esnext",
    "sourceMap": false,
    "experimentalDecorators": true,
    "declaration": false,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "outDir": "../out",
    "typeRoots": ["typings", "../node_modules/@types"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "types": ["jest", "node"]
  },
  "exclude": ["../dist"]
}
