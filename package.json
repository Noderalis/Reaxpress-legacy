{
  "name": "react-typescript-boilerplate",
  "version": "1.1.2",
  "repository": "https://github.com/TheGrimSilence/react-typescript-boilerplate.git",
  "author": "Adrian Roach <adrianroach@ebongarde.com>",
  "license": "MIT",
  "scripts": {
    "build:dev": "yarn clean && cross-env NODE_ENV=development ts-node fuse",
    "build:prod": "yarn clean && cross-env NODE_ENV=production ts-node fuse",
    "clean": "rimraf .fusebox dist",
    "clean-slate": "rimraf .fusebox dist node_modules && yarn",
    "test": "jest"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/testing/test-preprocessor.js"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/test/*.+(ts|tsx|js)"
    ],
    "setupFiles": [
      "<rootDir>/testing/test-shim.js",
      "<rootDir>/testing/test-setup.js"
    ]
  },
  "devDependencies": {
    "typescript": "^3.9.5",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11"
  }
}
